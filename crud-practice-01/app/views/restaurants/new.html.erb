<h1>New Restaurant</h1>

<%= form_tag '/restaurants', method: :post do %>
<div>
  <%= label_tag :name %>
  <%= text_field_tag :name, nil, placeholder: "Name"%>
</div>

<div>
  <%= label_tag :location %>
  <%= text_field_tag :location, nil, placeholder: "Location"%>
</div>

<div>
  <%= label_tag :cuisine %>
  <%= text_field_tag :cuisine, nil, placeholder: "Cuisine"%>
</div>

<% submit_tag "Create Restaurant"%>

<%end%>